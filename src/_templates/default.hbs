<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="styles/style.css">
  <title>{{title}}</title>
</head>
<body>
  {{#each categories as |category|}}
    {{#if category.name}}
    <h1>{{category.name}}</h1>
    {{/if}}
    {{#if category.description}}
    <p>{{category.description}}</p>
    {{/if}}
    {{#each category.lists as |list|}}
      <table>
        {{#if list.subtitle}}
        <thead>
          <tr>
            <th colspan="100%">{{list.subtitle}}</th>
          </tr>
        </thead>
        {{/if}}
        <tbody>
        {{#each list.items as |listItem|}}
          <tr>
            <td>
              <div class="title">{{listItem.name}}</div>
              <div class="includes">
                ({{#each listItem.includes}}{{this}}{{#unless @last}}, {{/unless}}{{/each}})
              </div>
            </td>
            <td>{{listItem.weight}} гр</td>
            <td>{{listItem.price}}₽</td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    {{/each}}
  {{/each}}
</body>
</html>
